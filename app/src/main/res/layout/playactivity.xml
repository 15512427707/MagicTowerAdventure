<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:weightSum="100"
    tools:context="wang.com.M_tower.activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <Button
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:background="@drawable/main_menu_btnshape"
                android:text="菜单"
                android:textSize="15sp"
                android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30">
        <wang.com.M_tower.View.MainGameView
            android:id="@+id/gv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_line_while"/>
           <!-- app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="70"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/boder">
                    <TextView
                        android:id="@+id/floor"
                        android:gravity="start|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/floor"
                        android:drawablePadding="3dp"
                        android:paddingStart="20dp"
                        android:textColor="@android:color/background_light"
                        android:text=""
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/boder">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="LV."
                        android:layout_marginStart="20dp"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/lv"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@android:color/background_light"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/boder"
                >

                 <AbsoluteLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_centerInParent="true"
                     android:gravity="center_horizontal">

                     <ImageButton
                         android:id="@+id/up"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_x="75dp"
                         android:layout_y="10dp"
                         android:src="@drawable/img_up" />

                     <ImageButton
                         android:id="@+id/down"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_x="75dp"
                         android:layout_y="70dp"
                         android:src="@drawable/img_down" />

                     <ImageButton
                         android:id="@+id/left"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginRight="55dp"
                         android:layout_x="25dp"
                         android:layout_y="40dp"
                         android:src="@drawable/img_left" />

                     <ImageButton
                         android:id="@+id/right"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:layout_marginLeft="50dp"
                         android:layout_x="125dp"
                         android:layout_y="40dp"
                         android:src="@drawable/img_right" />
                 </AbsoluteLayout>

                <!--<com.dlong.rep.dlroundmenuview.DLRoundMenuView
                    android:id="@+id/dl_rmv"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    app:RMCoreMenuDrawable="@mipmap/circle"
                    app:RMHasCoreMenu="true"
                    app:RMCoreMenuRoundRadius="0dp"
                    app:RMRoundMenuDrawable="@mipmap/go"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/boder">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder">
                        <TextView
                            android:id="@+id/hp"
                            android:gravity="start|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/hp"
                            android:textColor="@android:color/background_light"
                            android:text=""
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder">
                        <TextView
                            android:id="@+id/atk"
                            android:gravity="start|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/att"
                            android:textColor="@android:color/background_light"
                            android:text=""
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder">
                        <TextView
                            android:id="@+id/def"
                            android:gravity="start|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/def"
                            android:textColor="@android:color/background_light"
                            android:text=""
                            android:textSize="18sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boder"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder">
                        <TextView
                            android:id="@+id/exp"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:gravity="start|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/exp"
                            android:textColor="@android:color/background_light"
                            android:text=""
                            android:textSize="18sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/boder">
                        <TextView
                            android:id="@+id/gold"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:gravity="start|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/gold"
                            android:textColor="@android:color/background_light"
                            android:text=""
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:background="@drawable/boder">
                        <TextView
                            android:id="@+id/addDamage"
                            android:drawablePadding="10dp"
                            android:paddingStart="10dp"
                            android:gravity="start|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableStart="@drawable/crit"
                            android:textColor="@android:color/background_light"
                            android:text=""
                            android:textSize="18sp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boder">
                    <TextView
                        android:id="@+id/yellow_key"
                        android:gravity="start|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/yellow_key"
                        android:textColor="@android:color/background_light"
                        android:text=""
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boder">
                    <TextView
                        android:id="@+id/blue_key"
                        android:gravity="start|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/blue_key"
                        android:paddingEnd="10dp"
                        android:textColor="@android:color/background_light"
                        android:text=""
                        android:textSize="10sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/boder">
                    <TextView
                        android:id="@+id/red_key"
                        android:gravity="start|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/red_key"
                        android:paddingEnd="10dp"
                        android:textColor="@android:color/background_light"
                        android:text=""
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>